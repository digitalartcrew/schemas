<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:mixin:node-updated:1-0-0" mixin="true" extends="gdbots:pbjx:mixin:event:v1">
    <fields>
      <field name="node_ref" type="message-ref"/>
      <field name="new_etag" type="string" pattern="^[\w\.:-]+$" max="100"/>
      <field name="old_etag" type="string" pattern="^[\w\.:-]+$" max="100"/>
      <field name="new_node" type="message">
        <any-of>
          <curie>gdbots:ncr:mixin:node</curie>
        </any-of>
      </field>
      <field name="old_node" type="message">
        <description>
          The entire node, as it appeared before it was modified.
        </description>
        <any-of>
          <curie>gdbots:ncr:mixin:node</curie>
        </any-of>
      </field>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Ncr\Event</namespace>
    </php-options>
  </schema>
</pbj-schema>
