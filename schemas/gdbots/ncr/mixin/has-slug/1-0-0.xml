<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:mixin:has-slug:1-0-0" mixin="true">
    <fields>
      <field name="slug" type="string" format="slug">
        <description>
          The "slug" is a secondary identifier, typically used in a url:
          - MUST be url friendly
          - SHOULD NOT be case sensitive
          - SHOULD be unique within the message curie namespace
        </description>
      </field>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Ncr\Node</namespace>
    </php-options>
  </schema>
</pbj-schema>
