<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:mixin:node:1-0-0" mixin="true">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <description>
          The "_id" value:
          - MUST NOT change for the life of the node.
          - SHOULD be globally unique
          - SHOULD be generated by the app (ideally in default value closure... e.g. UuidIdentifier::generate())
        </description>
        <php-options>
          <classname>Gdbots\Identifiers\UuidIdentifier</classname>
          <default>function() { return \Gdbots\Identifiers\UuidIdentifier::generate(); }</default>
        </php-options>
      </field>

      <field name="status" type="string-enum">
        <default>draft</default>
        <enum id="gdbots:ncr:node-status"/>
      </field>

      <field name="etag" type="string" pattern="^[\w\.:-]+$" max="100"/>
      <field name="created_at" type="microtime" required="true"/>
      <field name="creator_ref" type="message-ref"/>
      <field name="updated_at" type="microtime" use-type-default="false"/>
      <field name="updater_ref" type="message-ref"/>
      <field name="published_at" type="microtime" use-type-default="false"/>
      <field name="expires_at" type="timestamp" use-type-default="false"/>
      <field name="title" type="string"/>
    </fields>

    <php-options>
      <namespace>Gdbots\Schemas\Ncr\Node</namespace>
    </php-options>
  </schema>
</pbj-schema>
