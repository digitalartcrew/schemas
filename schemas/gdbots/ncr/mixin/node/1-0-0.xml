<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:ncr:mixin:node:1-0-0" mixin="true">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <php-options>
          <classname>Gdbots\Identifiers\UuidIdentifier</classname>
          <default>function() { return \Gdbots\Identifiers\UuidIdentifier::generate(); }</default>
        </php-options>
      </field>
      <field name="slug" type="string" format="slug"/>
      <field name="status" type="string" pattern="^[A-Za-z0-9_\-]+$" overridable="true">
        <default>draft</default>
      </field>
      <field name="etag" type="string" pattern="^[A-Za-z0-9_\-]+$" max="100"/>
      <field name="created_at" type="microtime" required="true"/>
      <field name="updated_at" type="microtime" use-type-default="false"/>
      <field name="published_at" type="microtime" use-type-default="false"/>
    </fields>
<!--
TableArticleID
Slug
Title
Status
Created
Modified
-->
    <php-options>
      <namespace>Gdbots\Schemas\Ncr</namespace>
    </php-options>
  </schema>
</pbj-schema>
