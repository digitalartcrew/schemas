<?xml version="1.0" encoding="UTF-8" ?>

<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:pbjx:request:request-failed-response:1-0-0">
    <fields>
      <field name="failed_request" type="message" required="true">
        <any-of>
          <curie>gdbots:pbj:mixin:request</curie>
        </any-of>
      </field>

      <field name="reason" type="text" />
    </fields>

    <mixins>
      <curie-major>gdbots:pbj:mixin:response:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Gdbots\Schemas\Pbjx\Request</namespace>
    </php-options>
  </schema>
</pbj-schema>
