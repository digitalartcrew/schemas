  <entity id="pbj:gdbots:pbjx:request:request-failed-response:1-0-0">
    <fields>
      <field name="failed_request" type="message" required="true">
        <any_of>
          <curie>gdbots:pbj:mixin:request</curie>
        </any_of>
      </field>

      <field name="reason" type="text" />
    </fields>

    <mixins>
      <curie_major>gdbots:pbj:mixin:response:v1</curie_major>
    </mixins>

    <php_options>
      <namespace>Gdbots\Schemas\Pbjx\Request</namespace>
    </php_options>
  </entity>
</schema-mapping>
