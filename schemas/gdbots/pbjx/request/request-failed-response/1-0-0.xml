<schema-mapping xmlns="gdbots:pbjc:schema-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <entity id="pbj:gdbots:pbjx:request:request-failed-response:1-0-0">
    <field name="failed_request" type="message" required="true">
      <any_of>
        <id>gdbots:pbj:mixin:request</id>
      </any_of>
    </field>

    <field name="reason" type="text" />

    <mixins>
      <id>gdbots:pbj:mixin:response:v1</id>
    </mixins>

    <php_options>
      <namespace>Gdbots\Schemas\Pbjx\Request</namespace>
    </php_options>
  </entity>
</schema-mapping>
