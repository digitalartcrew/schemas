<?xml version="1.0" encoding="UTF-8" ?>

<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:gdbots:pbjx:event:event-execution-failed:1-0-0">
    <fields>
      <field name="event" type="message" required="true">
        <any-of>
          <curie>gdbots:pbjx:mixin:event</curie>
        </any-of>
      </field>

      <field name="error_code" type="small-int">
        <default>0</default>
        <php-options>
          <default>Code::OK</default>
        </php-options>
      </field>

      <field name="error_name" type="string" pattern="^[A-Za-z0-9_\.:-]+$" />
      <field name="error_message" type="text" />
    </fields>

    <mixins>
      <curie-major>gdbots:pbjx:mixin:event:v1</curie-major>
    </mixins>

    <php-options>
      <namespace>Gdbots\Schemas\Pbjx\Event</namespace>
      <insertion-points>
        <imports>
            <![CDATA[
use Gdbots\Schemas\Pbjx\Enum\Code;
            ]]>
        </imports>
        <methods/>
      </insertion-points>
    </php-options>
  </schema>
</pbj-schema>
